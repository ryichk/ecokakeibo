            <% end %>
            <h3 class="rank">
              <% meal = Meal.where(user_id: user.id).select(:cuisine_id) %>
              <%= user.name %><br>
              <%= ((Meal.where(user_id: user.id).sum(:foodmileage) * 1000) / (Cuisine.where(id: meal).sum(:calorie) ** 2)).round(2) %> mg<sub>/kcal<sup>2</sup></sub>
            </h3>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
